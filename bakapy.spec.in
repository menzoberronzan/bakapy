Summary: Bakapy backup framework
Name: bakapy
Version: @@_VERSION_@@
Release: @@_RELEASE_@@%{dist}
Source0: http://bakapy.org/download/bakapy-%{version}.tar.gz
License: GPLv3
Group: Backup
BuildRoot: %{_tmppath}/%{name}-%{version}-%{release}-buildroot
Vendor: Subuk
Requires(pre): /usr/sbin/useradd /usr/sbin/groupadd /usr/bin/getent

%description
Bakapy backup framework

%package scheduler
Summary: Bakapy scheduler

%description scheduler
Bakapy scheduler service

%package metaman
Summary: Bakapy metaman

%description metaman
Bakapy metadata service

%package storage
Summary: Bakapy storage

%description storage
Bakapy file storage service

%package front
Summary: Bakapy web interface

%description front
Bakapy web interface files

%prep
%setup -q

%build
./build.sh

%install
install -D bin/bakapy-scheduler %{buildroot}/usr/bin/bakapy-scheduler
install -D bin/bakapy-run-job %{buildroot}/usr/bin/bakapy-run-job
install -D bin/bakapy-show-meta %{buildroot}/usr/bin/bakapy-show-meta
install -D bin/bakapy-metaman %{buildroot}/usr/bin/bakapy-metaman
install -D bin/bakapy-storage %{buildroot}/usr/bin/bakapy-storage

install -d commands/ %{buildroot}/etc/bakapy/commands/

install -D debian/bakapy-scheduler.upstart %{buildroot}/etc/init/bakapy-scheduler.conf
install -D debian/bakapy-metaman.upstart %{buildroot}/etc/init/bakapy-metaman.conf
install -D debian/bakapy-storage.upstart %{buildroot}/etc/init/bakapy-storage.conf

install -D scheduler.conf %{buildroot}/etc/bakapy/scheduler.conf
install -D metaman.conf %{buildroot}/etc/bakapy/metaman.conf
install -D storage.conf %{buildroot}/etc/bakapy/storage.conf

install -d front/ %{buildroot}/usr/share/bakapy/front/
ln -sf /usr/share/bakapy/front/scripts/config.js %{buildroot}/etc/bakapy/front-config.js

install -d %{buildroot}/var/lib/bakapy/meta
install -d %{buildroot}/var/lib/bakapy/data

%clean
rm -rf $RPM_BUILD_ROOT

%pre
/usr/bin/getent group bakapy || /usr/sbin/groupadd --system bakapy
/usr/bin/getent passwd bakapy || /usr/sbin/useradd --system --home-dir /var/lib/bakapy --shell /bin/false --gid bakapy bakapy

%postun
test -f /sbin/initctl && /sbin/initctl stop bakapy &>/dev/null

%files scheduler
%attr(755,root,root) /usr/bin/bakapy-scheduler
%attr(755,root,root) /usr/bin/bakapy-run-job
%attr(755,root,root) /usr/bin/bakapy-show-meta
%attr(644,root,root) /etc/init/bakapy-scheduler.conf
#%config(noreplace) /etc/bakapy/jobs
%config(noreplace) /etc/bakapy/commands
%config(noreplace) /etc/bakapy/scheduler.conf
%doc LICENSE

%files metaman
%attr(755,root,root) /usr/bin/bakapy-metaman
%attr(644,root,root) /etc/init/bakapy-metaman.conf
%config(noreplace) /etc/bakapy/metaman.conf
%attr(750,bakapy,bakapy) /var/lib/bakapy/meta
%doc LICENSE

%files storage
%attr(755,root,root) /usr/bin/bakapy-storage
%attr(644,root,root) /etc/init/bakapy-storage.conf
%config(noreplace) /etc/bakapy/storage.conf
%attr(750,bakapy,bakapy) /var/lib/bakapy/data
%doc LICENSE

%files front
/usr/share/bakapy/front
%config(noreplace) /etc/bakapy/front-config.js
%doc front.nginx-vhost.conf.ex
%doc LICENSE


